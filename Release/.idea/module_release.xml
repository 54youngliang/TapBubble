<?xml version="1.0" encoding="UTF-8"?>
<project name="module_release" default="compile.module.release">
  <dirname property="module.release.basedir" file="${ant.file.module_release}"/>
  
  <property name="module.jdk.home.release" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.release" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.release" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.release" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="release.output.dir" value="undefined"/>
  <property name="release.testoutput.dir" value="undefined"/>
  
  <path id="release.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="release.module.production.classpath">
    <path refid="${module.jdk.classpath.release}"/>
  </path>
  
  <path id="release.runtime.production.module.classpath"/>
  
  <path id="release.module.classpath">
    <path refid="${module.jdk.classpath.release}"/>
  </path>
  
  <path id="release.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.release">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.release">
    <patternset refid="excluded.from.module.release"/>
  </patternset>
  
  
  <target name="compile.module.release" depends="compile.module.release.production,compile.module.release.tests" description="Compile module Release"/>
  
  <target name="compile.module.release.production" depends="register.custom.compilers" description="Compile module Release; production classes"/>
  
  <target name="compile.module.release.tests" depends="register.custom.compilers,compile.module.release.production" description="compile module Release; test classes" unless="skip.tests"/>
  
  <target name="clean.module.release" description="cleanup module">
    <delete dir="${release.output.dir}"/>
    <delete dir="${release.testoutput.dir}"/>
  </target>
</project>